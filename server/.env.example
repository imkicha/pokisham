# ============================================
# POKISHAM E-COMMERCE - ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pokisham

# JWT Configuration (CRITICAL - CHANGE IN PRODUCTION!)
# Use a strong random string of at least 32 characters
JWT_SECRET=your_jwt_secret_key_here_change_in_production_min_32_characters
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay Configuration (Payment Gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (for OTP & Notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=noreply@pokisham.com

# Firebase Configuration (for push notifications)
# Get these from Firebase Console: https://console.firebase.google.com/
# 1. Go to Project Settings > Service Accounts
# 2. Generate new private key (downloads JSON file)
# 3. Copy values from the JSON file
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Frontend URL
CLIENT_URL=http://localhost:3000

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3

# CORS Configuration
# Add production domain when deploying
ALLOWED_ORIGINS=http://localhost:3000,http://136.185.19.6:3000

# Security Configuration
SESSION_SECRET=your_session_secret_change_this_in_production

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_MAX=3
PASSWORD_RESET_RATE_LIMIT_MAX=3

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_OTP_LOGIN=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cookie Security (Production Settings)
# Set to 'true' in production with HTTPS
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# HTTPS Settings (Production)
# Enable HSTS in production
ENABLE_HSTS=false
HSTS_MAX_AGE=31536000
